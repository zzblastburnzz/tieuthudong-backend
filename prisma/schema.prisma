// ==== prisma/schema.prisma ====
generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id       String   @id @default(uuid())
  name     String
  role     String   // 'child' | 'parent'
  age      Int
  gender   String
  createdAt DateTime @default(now())
  tasks    Task[]
}

model Task {
  id          String   @id @default(uuid())
  title       String
  description String
  mediaUrl    String?
  userId      String
  user        User     @relation(fields: [userId], references: [id])
  createdAt   DateTime @default(now())
}